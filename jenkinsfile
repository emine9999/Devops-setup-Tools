pipeline {
    agent any
    stages {
        stage('Create Deployment') {
            steps {
                script {
                    sh '''
                    kubectl apply -f - <<EOF
                    apiVersion: apps/v1
                    kind: Deployment
                    metadata:
                      name: my-app
                    spec:
                      replicas: 2
                      selector:
                        matchLabels:
                          app: my-app
                      template:
                        metadata:
                          labels:
                            app: my-app
                        spec:
                          containers:
                          - name: my-app
                            image: nginx:latest
                            ports:
                            - containerPort: 80
                    EOF
                    '''
                }
            }
        }

        stage('Test Deployment') {
            steps {
                script {
                    sh 'kubectl get deployments'
                    sh 'kubectl get pods'
                }
            }
        }

        stage('Expose Service') {
            steps {
                script {
                    sh '''
                    kubectl expose deployment my-app --type=NodePort --port=80
                    '''
                }
            }
        }

        stage('Get Service Info') {
            steps {
                script {
                    sh 'kubectl get svc my-app'
                }
            }
        }
    }
}
